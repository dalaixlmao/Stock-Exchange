generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id String @id @default(uuid())
  name String
  email String
  password String
  balance Float @default(100000)
  orders order[]
}

model order{
  id String @id
  userId String
  price Float
  marketId String
  type order_type
  quantity Int
  user user @relation(fields: [userId], references: [id])
  market market @relation(fields: [marketId], references: [id])
}

model market{
  id String @id @default(uuid())
  name String
  orders order[]
}


enum order_type {
  BUY
  SELL
}